#projectDetail {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}

#projectDetail .tbar, #projectDetail .fbar {
  margin-bottom: 30rpx;
}

#projectDetail .projectName {
  font-size: 40rpx;
}

#projectDetail .tbar {
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 2rpx solid #CACACA;
  padding-bottom: 10rpx;
}

#projectDetail .tbar .add {
  color: #3CA8F6;
  font-size: 45rpx;
}

#projectDetail .fbar {
  display: flex;
  justify-content: space-around;
  height: 50rpx;
}

#projectDetail .fbar .btn {
  text-align: center;
  width: 160rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  border-radius: 24rpx;
  color: #000;
}

#projectDetail .fbar .active {
  color: #fff;
  background-color: #3CA8F6;
}

#projectDetail .contentWrap {
  padding: 20rpx 30rpx 0 30rpx;
  background-color: #EDECE8;
  flex: 1;
  border-radius: 12rpx;
}

#projectDetail .task {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 14rpx;
  margin-bottom: 20rpx;
}

#projectDetail .baseInfo {
  height: 60rpx;
}

#projectDetail .task .name {
  line-height: 60rpx;
  margin-left: 20rpx;
  font-size: 34rpx;
}

#projectDetail .task .discard {
  height: 40rpx;
  width: 120rpx;
  line-height: 40rpx;
  text-align: center;
  margin: 10rpx 0 0 80rpx;
  font-size: 24rpx;
  background-color: #ED6464;
  color: #fff;
  border-radius: 6rpx;
}